<h1>Brand</h1>
<%= nested_form_for @brand do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :est %>
    <%= f.text_field :est %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <%= f.fields_for :categories do |ff| %>
  <h1>Add Category</h1>
    <div class="field">
      <%= ff.label :name %>
      <%= ff.text_field :name %>
    </div>
    <div class="field">
      <%= ff.label :description %>
      <%= ff.text_field :description %>
    </div>
    <%= ff.link_to_remove "Remove this category" %>

  <% end %>

	<p><%= f.link_to_add "Add a category", :categories %></p>



  <%= f.fields_for :products do |ff| %>
  <h1>Add Product</h1>
    <div class="field">
      <%= ff.label :name %>
      <%= ff.text_field :name %>
    </div>
    <div class="field">
      <%= ff.label :price %>
      <%= ff.number_field :price %>
    </div>
    <div class="field">
      <%= ff.label :quantity %>
      <%= ff.number_field :quantity %>
    </div>
    <%= ff.link_to_remove "Remove this product" %>

  <% end %>

	<p><%= f.link_to_add "Add a product", :products %></p>


  <div class="actions">
    <%= f.submit %>
  </div>
 

<% end %>