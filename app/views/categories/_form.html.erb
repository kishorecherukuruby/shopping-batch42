<%= nested_form_for(category) do |f| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= f.fields_for :products do |ff| %>
  <h1>Add Product</h1>
    <div class="field">
      <%= ff.label :name %>
      <%= ff.text_field :name %>
    </div>
    <div class="field">
      <%= ff.label :price %>
      <%= ff.number_field :price %>
    </div>
    <div class="field">
      <%= ff.label :quantity %>
      <%= ff.number_field :quantity %>
    </div>
    <%= ff.link_to_remove "Remove this product" %>

  <% end %>

<p><%= f.link_to_add "Add a product", :products %></p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
