<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to "#{category.name}", products_category_url(category) %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Show', category, :class => "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), :class => "btn btn-info" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-warning" %></td>
        <td><%= link_to "Show Products", products_category_url(category), :class => "btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

